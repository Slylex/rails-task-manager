<p><%= @task.title  %></p>
<p><%= @task.details %></p>
<%= form_with model: @task do |f| %>
  <% if @task.completed %>
    <%= f.check_box :completed, checked: true %>
    <% else %>
    <%= f.check_box :completed, checked: false %>
  <% end %>
<% end %>

<%= link_to "back to tasks list", tasks_path %>
